<h2 class="visually-hidden">Disclosures, policies, and copyright information</h2>
<div style="--link-color: var(--text-color); display:flex;gap:2rem 2.5%">
  <a href="#" style="display:inline-block;min-width:10rem;width:10rem;padding:.25rem 0;">
    <span class="visually-hidden">Penn State</span>
    {% include '@oe/sprite/sprite.twig' with { name: 'psu-mark', expand: true } only %}
  </a>
  <div style="font-size: var(--font-size--3xsmall);line-height: var(--line-height--snug)">
    {% set accessibility %}<a style="display:inline-block;padding:.5rem 0;" href="https://www.worldcampus.psu.edu/accessibility">Accessibility</a>{% endset %}
    {% set nondiscrimination %}<a style="display:inline-block;padding:.5rem 0;" href="https://policy.psu.edu/policies/ad85">Nondiscrimination</a>{% endset %}
    {% set privacy %}<a style="display:inline-block;padding:.5rem 0;" href="https://www.worldcampus.psu.edu/privacy-policy">Privacy</a>{% endset %}
    {% set consumer_info %}<a style="display:inline-block;padding:.5rem 0;" href="https://www.worldcampus.psu.edu/consumer-information-and-disclosures">Consumer Information and Disclosures</a>{% endset %}
    {% set copyright %}<a style="display:inline-block;padding:.5rem 0;" href="https://www.psu.edu/copyright-information">The Pennsylvania State University Â©{{ 'now'|date('Y') }}</a>{% endset %}
    {% set x %}{% endset %}
    {% include '@oe/list/list.twig' with {
      orientation: 'horizontal',
      separator: 'dot',
      items: [
        accessibility,
        equal_opportunity,
        nondiscrimination,
        privacy,
        consumer_info,
        copyright,
      ]
    } only %}
  </div>
</div>
