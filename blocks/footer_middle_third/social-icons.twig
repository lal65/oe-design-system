{% set configuration = {
  facebook: 'https://www.facebook.com/psuworldcampus',
  instagram: 'https://www.instagram.com/pennstateworldcampus/',
  linkedin: 'https://www.linkedin.com/company/penn-state-world-campus',
  youtube: 'https://www.youtube.com/user/PSUWorldCampus',
} %}
{% set icons = [] %}
{% for platform_name, platform_url in configuration %}
  {% set icon %}
    {% include '@oe/social-icon/social-icon.twig' with {
      color: 'light',
      icon: platform_name,
      label: platform_name,
      url: configuration[platform_url]
    } only %}
  {% endset %}
  {% set icons = icons|merge([icon]) %}
{% endfor %}
  {% include '@oe/social-icons/social-icons.twig' with {
    social_icons: icons,
  } only %}
